# Local Development Environment
# Copy this to .env for local development

# Server Configuration
PORT=8080
ENV=local

# Database Configuration (Docker Compose)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=mySecurePassword123
DB_NAME=locat_test_db
DB_SSLMODE=disable

# Redis Configuration (Docker Compose)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration (Development - shorter expiry for testing)
JWT_SECRET=dev-secret-key-not-for-production-use-only
JWT_ACCESS_EXPIRY=30m
JWT_REFRESH_EXPIRY=24h

# OAuth Configuration
OAUTH_CODE_EXPIRY=10m

# Email Configuration (Development - use MailHog or similar)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=dev@localhost

# Rate Limiting (Disabled for development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000

# CORS Configuration (Allow all for development)
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Logging (Development friendly)
LOG_LEVEL=debug
LOG_FORMAT=text

# Development Features
DEBUG_ENABLED=true
HOT_RELOAD=true

# Database Connection Pool (Smaller for development)
DB_MAX_OPEN_CONNS=10
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300s